<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar theme for better visibility -->
    <style name="CalendarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/calendar_bg</item>
        <item name="android:textColorPrimary">@color/calendar_text_primary</item>
        <item name="android:textColorSecondary">@color/calendar_text_secondary</item>
    </style>

    <!-- Calendar text styles -->
    <style name="CalendarWeekDayText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/calendar_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/calendar_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
