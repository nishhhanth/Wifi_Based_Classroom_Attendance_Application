<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitAttendanceActivity"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:colorBackground">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_error"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_wifi_bad"
            android:layout_weight="1"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Attendance Session has not been started yet, or you are not connected to the University Wifi Network!"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_margin="20dp"
    android:textColor="?attr/colorOnBackground"
    android:textAlignment="center"/>
    
    <Button
        android:id="@+id/btn_test_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test WiFi Connection"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        android:textSize="17sp"
        android:padding="10dp"
        android:backgroundTint="?attr/colorPrimary"/>
        
    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Sessions"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        android:textSize="17sp"
        android:padding="10dp"
        android:backgroundTint="?attr/colorPrimary"/>
        
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/icon_logout"
        android:drawableTint="?attr/colorOnSurface"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:textSize="17sp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:backgroundTint="?attr/colorSurface"/>
</LinearLayout>