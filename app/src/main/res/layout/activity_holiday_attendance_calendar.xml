<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/btn_tab_attendance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/tab_segment_bg"
            android:text="ATTENDANCE"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="6dp"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/btn_tab_holiday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/tab_segment_bg"
            android:text="HOLIDAY"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_attendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calendar_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CalendarTheme"
            android:background="@color/white"
            android:selectedDateVerticalBar="@drawable/selected_date_indicator"
            android:unfocusedMonthDateColor="@color/text_secondary"
            android:focusedMonthDateColor="@color/black"
            android:weekDayTextAppearance="@style/CalendarWeekDayText"
            android:dateTextAppearance="@style/CalendarDateText"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_attendance_entries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_holiday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calendar_holiday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CalendarTheme"
            android:background="@color/white"
            android:selectedDateVerticalBar="@drawable/selected_date_indicator"
            android:unfocusedMonthDateColor="@color/text_secondary"
            android:focusedMonthDateColor="@color/black"
            android:weekDayTextAppearance="@style/CalendarWeekDayText"
            android:dateTextAppearance="@style/CalendarDateText"/>

        <ProgressBar
            android:id="@+id/progress_holiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_holiday_entries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"/>
    </LinearLayout>

</LinearLayout>


