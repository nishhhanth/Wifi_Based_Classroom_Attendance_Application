<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with gradient like the screenshot -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:paddingStart="16dp" />

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="DONE"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/modern_button_background" />
            </LinearLayout>

            <!-- Card with avatar, name and class/roll -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/profile_placeholder"
                        android:src="@drawable/user"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Akshay Syal"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_class_roll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class XI-B | Roll no: 04"
                            android:textSize="14sp"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_add_profile"
                        app:tint="@color/black"
                        android:alpha="0.6" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Content fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Two-column rows mimic screenshot spacing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adhar No"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_aadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234 4325 4567 1234"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic Year"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_academic_year_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-2021"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admission Class"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_admission_class_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old Admission No"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_old_admission_no_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T00221"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Admission"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_date_of_admission_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Apr 2018"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textSize="12sp"
                        android:alpha="0.7" />
                    <TextView
                        android:id="@+id/tv_date_of_birth_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 July 1996"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Mail ID"
                    android:textSize="12sp"
                    android:alpha="0.7" />
                <TextView
                    android:id="@+id/tv_parent_mail_id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="parentboth84@gmail.com"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother Name"
                    android:textSize="12sp"
                    android:alpha="0.7" />
                <TextView
                    android:id="@+id/tv_mother_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monica Larson"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father Name"
                    android:textSize="12sp"
                    android:alpha="0.7" />
                <TextView
                    android:id="@+id/tv_father_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bernard Taylor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parmanent Add."
                    android:textSize="12sp"
                    android:alpha="0.7" />
                <TextView
                    android:id="@+id/tv_permanent_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karol Bagh, Delhi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


