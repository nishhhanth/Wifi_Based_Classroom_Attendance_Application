<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar theme for DARK mode -->
    <style name="CalendarTheme" parent="@android:style/Widget.Material.CalendarView">
        <!-- Date colors -->
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:unfocusedMonthDateColor">@color/grey</item>
        <item name="android:weekNumberColor">@color/white</item>
        <item name="android:weekSeparatorLineColor">@color/white</item>

        <!-- Text appearance -->
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextDark</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextDark</item>

        <!-- Background -->
        <item name="android:background">@color/black</item>
    </style>

    <!-- Weekday text (dark) -->
    <style name="CalendarWeekDayTextDark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Date text (dark) -->
    <style name="CalendarDateTextDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
